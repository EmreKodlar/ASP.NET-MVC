@using MVC_Stok_Proje.Models.Entity

@model List<TBLKATEGORILER>


@{
    ViewBag.Title = "Kategori Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";

     
}

<h2>@ViewBag.Title</h2>

@if (TempData["mesaj"] != null)
{
    <br />
    <div class="alert alert-success alert-dismissible " role="alert">
        <strong>İşlem Başarılı!</strong> @TempData["mesaj"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <br />
}

<table class="table table-bordered" id="KategoriTablosu">
    <thead>
        <tr>
            <th>KATEGORİ ID</th>
            <th>KATEGORİ AD</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var kategori in Model)
        {
            <tr>
                <td>@kategori.KATEGORIID</td>
                <td>@kategori.KATEGORIAD</td>
                <td>@Html.ActionLink("SİL", "Sil", new { id = kategori.KATEGORIID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
                <td><a href="/Kategori/KategoriDuzenle/@kategori.KATEGORIID" class="btn btn-primary">GÜNCELLE</a></td>

            </tr>

        }


    </tbody>

</table>

<a href="/Kategori/YeniKategori/" class="btn btn-success">YENİ KATEGORİ EKLE</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<script type="text/javascript" src="~/Content/DataTables/js/DataTables.min.js"></script>
<script>

    $('#KategoriTablosu').DataTable({
        language: {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });

</script>

<script>

    $('.alert').alert()

</script>
